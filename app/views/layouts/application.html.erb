<!DOCTYPE html>
<html>
  <head>
    <title>SimpleAuth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% flash.each do |_type, msg| %>
      <%= msg %>
    <% end %>

    <%= link_to "Logout", logout_path, data: { "turbo-method": :delete } if current_user.present? %>

    <%= yield %>
  </body>
</html>
